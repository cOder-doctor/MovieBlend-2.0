                        <img class="d-block w-100" src=@Model.movieArray.results[1].backdrop_path alt="First slide">
                        <div class="mask rgba-black-light"></div>
                    </div>
                    <div class="carousel-caption">
                        <h3 class="h3-responsive">@Model.movieArray.results[1].title</h3>
                        <p>@Model.movieArray.results[1].vote_average</p>
                    </div>
                </div>
            }
            @if (Model.movieArray.results[2] != null)
            {<div class="carousel-item" onclick="location.href='@Url.Action("DetailsMovie", "Home", new { @data = JsonConvert.SerializeObject(@Model.movieArray.results[2].id) })'">
                    <div class="view">
                        <img class="d-block w-100" src=@Model.movieArray.results[2].backdrop_path alt="First slide">
                        <div class="mask rgba-black-light"></div>
                    </div>
                    <div class="carousel-caption" onclick="location.href='@Url.Action("DetailsMovie", "Home", new { @data = JsonConvert.SerializeObject(@Model.movieArray.results[3].id) })'">
                        <h3 class="h3-responsive">@Model.movieArray.results[2].title</h3>
                        <p>@Model.movieArray.results[2].vote_average</p>
                    </div>
                </div>}
            @if (Model.movieArray.results[3] != null)
            {<div class="carousel-item" onclick="location.href='@Url.Action("DetailsMovie", "Home", new { @data = JsonConvert.SerializeObject(@Model.movieArray.results[4].id) })'">
                    <div class="view">
                        <img class="d-block w-100" src=@Model.movieArray.results[3].backdrop_path alt="First slide">
                        <div class="mask rgba-black-light"></div>
                    </div>
                    <div class="carousel-caption">
                        <h3 class="h3-responsive">@Model.movieArray.results[3].title</h3>
                        <p>@Model.movieArray.results[3].vote_average</p>
                    </div>
                </div>}
            @if (Model.movieArray.results[4] != null)
            {<div class="carousel-item" onclick="location.href='@Url.Action("DetailsMovie", "Home", new { @data = JsonConvert.SerializeObject(@Model.movieArray.results[4].id) })'">
                    <div class="view">
                        <img class="d-block w-100" src=@Model.movieArray.results[4].backdrop_path alt="First slide">
                        <div class="mask rgba-black-light"></div>
                    </div>
                    <div class="carousel-caption">
                        <h3 class="h3-responsive">@Model.movieArray.results[4].title</h3>
                        <p>@Model.movieArray.results[4].vote_average</p>
                    </div>
                </div>
            }
        </div>
    }
    <!--/.Slides-->
    <!--Controls-->
    <a class="carousel-control-prev" href="#carousel-3" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carousel-3" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
    <!--/.Controls-->
</div>

<!--/.Carousel Wrapper-->
