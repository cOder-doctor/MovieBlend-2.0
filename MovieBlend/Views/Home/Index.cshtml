@model AllData
@{
    ViewData["Title"] = "Home Page";
}
@using Newtonsoft.Json
<style>
    div.inner_content h2, div.inner_content p {
        margin: 0;
    }

    h1, h2, h3, h4, h5, p {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    h2 {
        font-size: 1.5em;
        margin: 0 0 4px 0;
        font-weight: 600;
        display: block;
        font-size: 1.5em;
        margin-block-start: 0.83em;
        margin-block-end: 0.83em;
        margin-inline-start: 0px;
        margin-inline-end: 0px;
        font-weight: bold;
    }

    div.new_stuff_wrapper {
        width: 100%;
        box-sizing: border-box;
        display: flex;
        align-items: center;
    }

    div.block {
        display: block;
        width: 100%;
        height: 93px;
        box-sizing: border-box;
        z-index: 0;
    }

    div.purple_gradient {
        background-image: radial-gradient(at 30% top, rgba(31, 40, 73, 1) 0%, rgba(8, 28, 36, 1) 70%);
    }

    div.inner_content {
        background-position: -40px -500px;
        background-image: url(https://www.themoviedb.org/assets/2/v4/account_pipes/purple-63b164a075461641b7ef444ea97d9787adf45a9552fe215e20063e3ff02491a8.svg);
    }

    div.inner_content {
        box-sizing: border-box;
        width: 100%;
        background-repeat: no-repeat;
        position: relative;
        top: 0;
        left: 0;
        z-index: 2;
        text-align: center;
        padding: 20px 0;
    }

    div {
        display: block;
    }

        div.stamp {
            background-image: url(https://www.themoviedb.org/assets/2/v4/taw/2018/BGHeaderIndex@1x-53ee7aa49575b74c4acbbc10812aa6c9277bc9786b247d7f167358f2943b7032.png);
            background-repeat: no-repeat;
            background-position: top center;
            background-size: 1414px 93px;
        }

        div.inner_content a {
            color: #fff;
            transition: all 0.3s;
        }

    h2 a {
        font-weight: 600;
    }

    a {
        color: #000;
        text-decoration: none;
        font-weight: normal;
        background: transparent;
    }
</style>
<form method="post" asp-action="Search" defaultbutton="btnSubmit">
    <div class="input-group md-form form-sm form-1 pl-0">
        <div class="input-group-prepend">
            <button class="input-group-prepend" id="btnSubmit" type="submit" style="background-color:transparent;visibility:hidden"></button>
            <span class="input-group-text primary-color lighten-3" id="basic-text1">
                <i class="fas fa-search text-white"
                   aria-hidden="true"></i>
            </span>
        </div>
        <input required asp-for="@Model.search_data" class="form-control my-0 py-1 text-white" type="text" placeholder="Search" aria-label="Search">
    </div>
</form>
<div class="new_stuff_wrapper">
    <div class="block purple-gradient">
        <div class="inner_content">
            <h2>
                <a class="text-success" asp-controller="Post" asp-action="Index">
                    Discussions
                </a>
            </h2>
            <p>
                <a class="text-white">
                    Catch Up Now
                </a>
            </p>
        </div>
    </div>
    <div class="block stamp">
        <div class="inner_content">
            <h2>
                <a class="text-primary" href="https://www.themoviedb.org/2018?language=en-US">That's a wrap</a>
            </h2>
            <p><a class="text-white">Read the 2018 Recap</a></p>
        </div>
    </div>
</div>
<br />

<div class="header aqua-gradient">
    <div class="row d-flex justify-content-center">
        <h3 class="white-text mb-0 py-3 font-weight-bold">On Theater</h3>
    </div>
</div>
<!--Carousel Wrapper-->
<div id="carousel-3" class="carousel slide carousel-fade z-depth-1-half" data-ride="carousel">
    <!--Indicators-->

    <ol class="carousel-indicators">
        <li data-target="#carousel-3" data-slide-to="0" class="active"></li>
        <li data-target="#carousel-3" data-slide-to="1"></li>
        <li data-target="#carousel-3" data-slide-to="2"></li>
        <li data-target="#carousel-3" data-slide-to="3"></li>
        <li data-target="#carousel-3" data-slide-to="4"></li>
    </ol>
    <!--/.Indicators-->
    <!--Slides-->
    @if (Model.movieArray != null)
    {
        <div class="carousel-inner" role="listbox">
            @if (Model.movieArray.results[0] != null)
            {<div class="carousel-item active" onclick="location.href='@Url.Action("DetailsMovie", "Home", new { @data = JsonConvert.SerializeObject(@Model.movieArray.results[0].id) })'">
                    <div class="view">
                        <img class="d-block w-100" src=@Model.movieArray.results[0].backdrop_path alt="First slide">
                        <div class="mask rgba-black-light"></div>
                    </div>
                    <div class="carousel-caption">
                        <h3 class="h3-responsive">@Model.movieArray.results[0].title</h3>
                        <p>@Model.movieArray.results[0].vote_average</p>
                    </div>
                </div>
            }
            @if (Model.movieArray.results[1] != null)
            {<div class="carousel-item" onclick="location.href='@Url.Action("DetailsMovie", "Home", new { @data = JsonConvert.SerializeObject(@Model.movieArray.results[1].id) })'">
