@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<form method="post" asp-route-returnUrl="@Model.ReturnUrl" >
    <div class="modal-dialog" role="document">
        <!--Content-->
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="modal-content form-elegant">
            <!--Header-->
            <div class="modal-header text-center">
                <h3 class="modal-title w-100 dark-grey-text font-weight-bold my-3" id="myModalLabel"><strong>Create a new account</strong></h3>
            </div>
            <!--Body-->
            <div class="modal-body mx-4">
                <!--Body-->
                <div class="md-form mb-5 form-group">
                    <input type="email" id="Form-email1" class="form-control validate" asp-for="Input.Email">
                    <label for="Form-email1" asp-for="Input.Email"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="md-form mb-5 form-group">
                    <input type="text" class="form-control validate" asp-for="Input.username">
                    <label asp-for="Input.username">UserName</label>
                </div>

                <div class="md-form mb-5 form-group">
                    <input asp-for="Input.Password" type="password" id="Form-pass1" class="form-control validate">
                    <label asp-for="Input.Password"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="md-form pb-3 form-group">
                    <input asp-for="Input.ConfirmPassword" type="password" id="Form-pass1" class="form-control validate">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="text-center mb-3">
                    <button type="submit" class="btn blue-gradient btn-block btn-rounded z-depth-1a">Sign Up</button>
                </div>
            </div>
        </div>
        <!--/.Content-->
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
